<UserControl x:Class="web3script.ucontrols.OtherConfigPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:web3script.ucontrols"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <Border Grid.Row="0" Background="#F0F0F0" Margin="20,10,20,10">
            <TextBlock Text="其它配置" FontSize="18" FontWeight="Bold" Margin="15" HorizontalAlignment="Left"/>
        </Border>
        
        <!-- 其它配置内容 -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 使用说明 -->
                    <Border Background="#EFF6FF" Padding="15" BorderBrush="#BBD8FF" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="其它配置说明" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" 
                                       Text="本页面包含了Twitter、Discord和Telegram等社交平台的配置设置，将在后续版本中推出交互功能。"/>
                            <TextBlock TextWrapping="Wrap" Text="敬请期待更多功能的上线。"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Twitter配置 -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel Margin="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Twitter配置" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="Twitter API设置和账号管理" Foreground="#666666" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Column="1" Background="#1D9BF0" CornerRadius="5" Padding="8,5">
                                    <TextBlock Text="即将推出" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                            
                            <Separator Margin="0,15,0,15" Background="#EEEEEE"/>
                            
                            <TextBlock Text="该功能将在后续版本中推出，敬请期待。" Foreground="#666666"/>
                            <TextBlock Text="届时您将能够配置Twitter API密钥、管理多个Twitter账号以及设置自动化操作。" 
                                       Foreground="#666666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Discord配置 -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel Margin="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Discord配置" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="Discord机器人设置和频道管理" Foreground="#666666" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Column="1" Background="#5865F2" CornerRadius="5" Padding="8,5">
                                    <TextBlock Text="即将推出" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                            
                            <Separator Margin="0,15,0,15" Background="#EEEEEE"/>
                            
                            <TextBlock Text="该功能将在后续版本中推出，敬请期待。" Foreground="#666666"/>
                            <TextBlock Text="届时您将能够配置Discord Bot Token、管理服务器和频道以及设置自动化互动。" 
                                       Foreground="#666666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Telegram配置 -->
                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel Margin="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Telegram配置" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="Telegram Bot API配置和群组管理" Foreground="#666666" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <Border Grid.Column="1" Background="#0088CC" CornerRadius="5" Padding="8,5">
                                    <TextBlock Text="即将推出" Foreground="White" FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                            
                            <Separator Margin="0,15,0,15" Background="#EEEEEE"/>
                            
                            <TextBlock Text="该功能将在后续版本中推出，敬请期待。" Foreground="#666666"/>
                            <TextBlock Text="届时您将能够配置Telegram Bot Token、管理群组和频道以及设置自动化消息。" 
                                       Foreground="#666666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 联系我们 -->
                    <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20">
                        <StackPanel>
                            <TextBlock Text="功能建议" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10" 
                                       Text="如果您对这些即将推出的功能有任何建议或需求，请通过Telegram联系我们。我们非常重视您的反馈，并将尽力在未来版本中满足您的需求。"/>
                            <TextBlock TextWrapping="Wrap" Text="感谢您使用我们的产品！" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl> 